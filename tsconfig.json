// used for react webpage development with vite
{
    "compilerOptions":{
        // -- ts compiler settings
        "strict":true,
        "noEmit":true,
        // "importHelpers":true,

        // -- lib settings
        "lib":["dom","ESNext"],
        "target":"ESNext",
        "types": ["vite/client","chrome","svelte"],

        // -- module/import settings
        "esModuleInterop":false,
        "moduleResolution":"node",
        "module":"ESNext",
        "resolveJsonModule":true,
        "isolatedModules":true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck":false,
        // "preserveSymlinks": true,

        // -- pathing
        "baseUrl":".",
        "paths":{
            "@/*":["web/*"]
        }
    },

    "include":[
        "web/**/*.d.ts",
        "web/**/*.ts",
    ],

    "exclude":[
        "node_modules"
    ]
}